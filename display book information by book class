class Book:
    def __init__(self, title, author):
        self.title = title
        self.author = author

    def __str__(self):  
        return f"Book: {self.title} by {self.author}"

    def __repr__(self): 
        return f"Book('{self.title}', '{self.author}')"

# Test
b1 = Book("Python Basics", "Guido")
print("Using print():", b1)     
print("Using repr():", repr(b1))
